<Window x:Class="WpfAppErrorHandling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppErrorHandling"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Window.DataContext>
            <local:MainWindowViewModel/>
        </Window.DataContext>
    <Grid>
        <xctk:DecimalUpDown x:Name="IntegerUpDown1" 
                             Value="{Binding Input1}" HorizontalAlignment="Left" Margin="24,23,0,0" VerticalAlignment="Top" Width="126"/>

        <xctk:DecimalUpDown x:Name="IntegerUpDown2" 
                             Value="{Binding Input2}" HorizontalAlignment="Left" Margin="24,46,0,0" VerticalAlignment="Top" Width="126"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="24,73,0,0" TextWrapping="Wrap" Text="{Binding Input3}" VerticalAlignment="Top" Width="126"/>
    </Grid>
</Window>
